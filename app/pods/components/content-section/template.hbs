

<section class="section-content">

  {{#if titletype}}
  {{#if (eq titletype 1)}}
  <h1 id="{{convert-aeoaa basename}}">{{title}}</h1>
  {{/if}}

  {{#if (eq titletype 2)}}
  <h2 id="{{convert-aeoaa basename}}">{{title}}</h2>
  {{/if}}

  {{#if (eq titletype 3)}}
  <h3 id="{{convert-aeoaa basename}}">{{title}}</h3>
  {{/if}}
  {{else}}
  <h2 id="{{convert-aeoaa basename}}">{{title}}</h2>
  {{/if}}

  {{markdown-to-html markdown=content}}

  {{#if assetpath}}
  <footer>
    {{#if (is-array url)}}
      <h3>Last ned mal:</h3>
      <br/>
      {{#each url as |resource|}}
      <div class="card">
        <div class="card-header">
          {{resource.title}}
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Versjon:</strong> {{resource.version}}</li>
          <li class="list-group-item"><strong>Format:</strong> <em>.{{resource.format}}</em></li>
          {{#if resource.formathelpertext}}
          <li class="list-group-item"><strong>Beskrivelse:</strong> {{markdown-to-html markdown=resource.formathelpertext}}</li>
          {{/if}}
        </ul>
        <div class="card-block">
          <a class="btn btn-primary" href="https://hiof.no/assets/plugins/design-templates/public/{{resource.file}}-{{resource.format}}-{{resource.version}}.zip"><span class="glyphicon glyphicon-download"></span>Last ned</a>
          <a class="card-link" href="mailto:design@hiof.no?subject=Malfeil: Fil:{{resource.file}}-{{resource.format}}, versjon: {{resource.version}}">Meld fra om feil/mangler</a>
        </div>
      </div>
      {{/each}}
    {{else}}
      {{#if url}}
        <a href="https://hiof.no{{assetpath}}{{url}}.zip" class="btn btn-primary"><span class="glyphicon glyphicon-download"></span> {{url}}</a>
      {{/if}}
    {{/if}}
</footer>
{{/if}}
</section>
{{#if illustration}}
<aside class="section-illustration">
  <img {{action 'openModal' basename}} class="img-illustration" data-id="image-{{convert-aeoaa basename}}" src="https://hiof.no/assets/plugins/design-{{type}}/illustrations/{{illustration}}">
  {{#my-modal basename=basename}}
    <img src="https://hiof.no/assets/plugins/design-{{type}}/illustrations/{{illustration}}">
  {{/my-modal}}
  <!--
  {{#bs-modal title=title basename=basename footer=false open=false id=basename}}
    <img src="https://hiof.no/assets/plugins/design-{{type}}/illustrations/{{illustration}}">
  {{/bs-modal}}
-->
</aside>

{{else}}
<aside class="section-illustration-placeholder"></aside>
{{/if}}
<footer class="visuallyhidden">
  Oppdatert av {{author}} on {{date}}
</footer>
